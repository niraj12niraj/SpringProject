 -->
        <!--default-target-url="/profile"-->

		<form-login 
		    login-page="/login" 
			login-processing-url="/j_spring_security_check" 
		    default-target-url="/**"
			authentication-failure-url="/login?error" 
			username-parameter="username"
			password-parameter="password" />
		<logout logout-success-url="/index?logout"  />
		<access-denied-handler error-page="/403" />
		<!-- enable csrf protection -->
		<csrf disabled="true"/>
	</http>
	
	<authentication-manager>
		<authentication-provider>
			<jdbc-user-service data-source-ref="dataSource"
			 	users-by-username-query="select EMAIL,PASSWORD,ENABLED from USERA where EMAIL=?"
			 	authorities-by-username-query="select EMAIL,AUTHORITY from USERA where EMAIL=?"/>
		</authentication-provider>
	</authentication-manager>
	
</beans:beans>